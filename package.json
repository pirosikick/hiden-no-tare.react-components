{
  "name": "hiden-no-tare.react-components",
  "version": "1.0.0",
  "description": "A secret sauce of React components project, which was made by @pirosikick",
  "main": "lib/index.js",
  "files": [
    "package.json",
    "lib/",
    "dist/",
    "src/"
  ],
  "scripts": {
    "serve": "",
    "copy-libs": "./scripts/copy-libs.sh",
    "test": "ava",
    "test:coverage": "cross-env NODE_ENV=test nyc ava",
    "build": "run-s clean build:*",
    "build:babel": "cross-env NODE_ENV=production babel src -d lib",
    "build:webpack": "webpack --config webpack.config.js",
    "build:webpack-prod": "webpack --config webpack.config.prod.js",
    "clean": "rm -rf lib dist",
    "lint": "eslint src test",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pirosikick/hiden-no-tare.react-components.git"
  },
  "keywords": [
    "hiden-no-tare"
  ],
  "author": "Hiroyuki ANAI <pirosikick@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pirosikick/hiden-no-tare.react-components/issues"
  },
  "homepage": "https://github.com/pirosikick/hiden-no-tare.react-components#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.16.3",
    "cross-env": "^3.1.3",
    "enzyme": "^2.5.1",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "jsdom": "^9.8.0",
    "lint-staged": "^3.2.0",
    "npm-run-all": "^3.1.1",
    "nyc": "^8.3.1",
    "pre-commit": "^1.1.3",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.{js,jsx}"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "env": {
      "test": {
        "sourceMap": "inline",
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "peerDependencies": true
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.@(js|jsx)": "eslint"
  },
  "nyc": {
    "include": [
      "src/**/*.{js,jsx}"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "all": true
  }
}
